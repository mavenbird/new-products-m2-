<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <newproduct>
            <setting>
                <enable>1</enable>
                <show_heading>1</show_heading>
                <heading>New Products</heading>
                <product_type>0</product_type>
                <default_new>1</default_new>
                <add_days>10</add_days>
                <newproduct>1</newproduct>
                <categories>2</categories>
                <sort_by>name</sort_by>
                <sort_order>asc</sort_order>
                <price>1</price>
                <description>0</description>
                <compare>1</compare>
                <wishlist>1</wishlist>
                <cart>1</cart>
                <out_stock>0</out_stock>
                <no_of_product>30</no_of_product>
                <per_page_value>3</per_page_value>
                <slider>1</slider>
                <products_per_row>3</products_per_row>    
                <enable_ajaxscroll_page>0</enable_ajaxscroll_page>
            </setting>
            
            
            <slidersetting>
                <autoscroll>1</autoscroll>                
                <navarrow>1</navarrow>
            </slidersetting>
        </newproduct>
    </default>
</config>
